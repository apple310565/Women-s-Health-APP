<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="328dp"
        android:layout_height="128dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="11dp"

        android:layout_marginRight="11dp"
        android:layout_marginBottom="16dp"
        android:background="#A9FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#C6FA754B"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FBF7CD"
                android:text="經期倒數"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FBF7CD"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="3sp"
            android:paddingRight="25sp">

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="25"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="#F44336"
                android:textSize="55sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#F44336"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="328dp"
        android:layout_height="165dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="10dp"
        android:background="#C4FA754B"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:text="選擇日期"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="20sp"
                android:background="#4FFFFFFF"
                android:gravity="center"
                android:text="2020/4/22"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:text="經期開始"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/end"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:enabled="false"
                android:text="經期結束"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:background="#36FFFFFF"
            android:onClick="change_firstday"
            android:text="更改經期開始時間"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textColorHint="#B8B8B8"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="357dp"
        android:layout_height="68dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="3dp"
        android:background="#C4FA754B"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="流\n量"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/RGflow"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:background="#92FFFFFF"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/f1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="多"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/f2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="正常"
                android:textColor="#000000"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/f3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="少"
                android:textColor="#000000"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/f4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="或多\n或少"
                android:textColor="#000000"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/f5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="點滴性\n出血"
                android:textColor="#000000"
                android:textSize="10sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="357dp"
        android:layout_height="68dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="3dp"
        android:background="#C4FA754B"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="經\n色"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/RGcolor"
            android:layout_width="306dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp"
            android:background="#92FFFFFF"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="黝\n深"
                android:textColor="#5A5555"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/c2"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:text="鮮\n紅"
                android:textColor="#F44336"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="淡\n紅"
                android:textColor="#F3877F"
                android:textColorLink="#FA7166"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/c4"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:text="紫\n紅"
                android:textColor="#981047"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/c5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="紫\n黑"
                android:textColor="#490255"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="357dp"
        android:layout_height="68dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="79dp"
        android:background="#C4FA754B"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="質\n地"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/RGqaulity"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            android:background="#92FFFFFF"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/q1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="清稀"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/q2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="正常" />

            <RadioButton
                android:id="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="黏稠"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="有血塊"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/q5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="夾雜\n黏液"
                android:textSize="10sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="104dp"
        android:layout_height="53dp"
        android:layout_marginStart="153dp"
        android:layout_marginLeft="153dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="28dp"
        android:background="#C4FA754B"
        android:onClick="submit_click"
        android:text="送出"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textColorHint="#B8B8B8"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>